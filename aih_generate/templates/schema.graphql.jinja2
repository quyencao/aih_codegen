
type Mutation {
  {% for type in types %}
  create{{ type["name"] }}(input: {{ type["name"] }}Input!): {{ type["name"] }}
  update{{ type["name"] }}(id: ID!, input: {{ type["name"] }}Input!): {{ type["name"] }}
  remove{{ type["name"] }}(id: ID!): Boolean
  {% endfor %}
}

type Query {
  {% for type in types %}
  get{{ type["name"] }}(id: ID!): {{ type["name"] }}
  get{{ type["name"] }}s: [{{ type["name"] }}!]
  {% endfor %}
}

{% for type in types %}
input {{ type["name"] }}Input {
  {% for field in type["fields"] %}
  {{ field["name"] }}: {{ field["type"] }}{{ '!' if field["required"] else '' }}
  {% endfor %}
}

{% endfor %}

{% for type in types %}
type {{ type["name"] }} {
  id: ID!
  {% for field in type["fields"] %}
  {{ field["name"] }}: {{ field["type"] }}{{ '!' if field["required"] else '' }}
  {% endfor %}
}

{% endfor %}

